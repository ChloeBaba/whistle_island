<div class="container">
<h1 class="d-flex justify-content-center">Whistle Islands</h1>
  <div class="row">
    <% @islands.each do |island| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card" style="background-image: url('https://www.privateislandsonline.com/uploads/984/58fa753c8c47a.jpg')">
          <div class="card-description">
            <h3>Name: <%= link_to island.name, island_path(island) %></h3>
          </div>
          <p><b>Description</b> <%= island.description %></p>
          <p><b>Owner</b> <%= island.user.email %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

