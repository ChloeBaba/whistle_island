<div class ="search-form-control form-group">
  <%= form_tag islands_path, method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find an island"
    %>
    <%= submit_tag "Search", class: "btn btn-primary form" %>
  <% end %>
</div>
<div class="cards">
  <% @islands.each do |island| %>
      <div class="card-island">
        <% link_to island_path(island) %>
        <%= cl_image_tag island.photo %>
        <div class="card-island-infos">
          <div>
            <h2><%= link_to island.name, island_path(island) %></h2>
            <p><%= island.location%> - <em><%= island.slogan%></em>  </p>
          </div>
          <h2 class="price"><%= island.price %>$/Night</h2>
        </div>
      </div>
  <% end %>
</div>
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
>
</div>
