<div class="container">

  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://www.privateislandsonline.com/uploads/984/58fa753c8c47a.jpg" class="d-block w-100" alt="global-view">
      </div>
      <div class="carousel-item">
        <img src="https://www.bluewaterdivetravel.com/sites/default/files/mana2.jpg" class="d-block w-100" alt="beach view">
      </div>
      <div class="carousel-item">
        <img src="http://www.vladi-private-islands.de/fileadmin/islands/caribbean/rent/necker_island/necker_island_038.jpg" class="d-block w-100" alt="home">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <h1> <%= @island.name  %> </h1>

  <h3>Description :</h3>

<p><%= @island.description %></p>
<p><%= @island.price %> $ per night</p>
<p><%= @island.availability %></p>

  <%= link_to "Book !", new_island_booking_path(@island), class: 'btn btn-primary' %>
  <%= link_to "Back to the list", islands_path, class: 'btn btn-primary' %>
  <!-- If I am the owner, display the link-->
  <!-- otherwise, don't -->
  <% if current_user == @island.user %>
    <%= link_to "Edit your Island", edit_island_path(@island), class: 'btn btn-primary' %>
    <%= link_to "Delete your Island", island_path(@island), class: 'btn btn-primary', method: :delete,
        data: { confirm: "Are you sure?" } %>
  <% else %>
    <!-- nothing -->
  <% end %>
</div>