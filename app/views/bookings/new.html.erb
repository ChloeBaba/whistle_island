<div class="booking-form-container">
  <div class="booking-form-title">
    <h3><%= current_user.name %>, book the beautiful <%= @island.name %>!</h3>
  </div>
  <div class="booking-form-details">
    <%= simple_form_for [@island, @booking] do |f| %>
      <%= f.input :start_date, label: "Arrival", as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, label: "Departure", as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.submit "Book!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= link_to "ISLAND OWNER PROFILE", profile_path(@island_owner)  %>









