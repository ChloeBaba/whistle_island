<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-med-8">
      <h1>Edit your booking for <%= @booking.island.name %></h1>
      <%= simple_form_for [@booking.island, @booking] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.submit "Update!", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
